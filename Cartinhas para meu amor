# Criando o arquivo index.html com o código do site das cartinhas

codigo_site = """
<!DOCTYPE html>
<html lang="pt-BR">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Cartinhas de Amor</title>
<style>
  @import url('https://fonts.googleapis.com/css2?family=Quicksand&display=swap');
  body {
    margin: 0; background: #0a0a0a; color: #eee;
    font-family: 'Quicksand', sans-serif;
    overflow-x: hidden;
  }
  /* Tela de entrada */
  #entrada {
    height: 100vh; display: flex;
    justify-content: center; align-items: center;
    text-align: center;
    background: linear-gradient(135deg, #8e0e00, #4b004b, #004b6b, #000000);
    padding: 2rem;
  }
  #entrada h1 {
    font-size: 2.4rem; max-width: 600px;
    line-height: 1.4; font-weight: 600;
    color: #f9c6c9;
    text-shadow: 1px 1px 4px #550000;
    user-select: none;
  }
  #btnEntrar {
    margin-top: 2rem;
    padding: 0.8rem 2rem;
    font-size: 1.2rem;
    border: none;
    background: #b30000;
    color: white;
    border-radius: 30px;
    cursor: pointer;
    box-shadow: 0 4px 10px #a00;
    transition: background 0.3s ease;
  }
  #btnEntrar:hover {
    background: #e22e2e;
  }
  /* Página das cartinhas */
  #cartinhasPage {
    display: none;
    padding: 2rem 1rem 4rem 1rem;
    background: #121212;
    min-height: 100vh;
    color: #eee;
  }
  #tituloCartinhas {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 2rem;
    color: #db2b5f;
    text-shadow: 1px 1px 3px #8b004b;
    user-select: none;
  }
  /* Grid de cartinhas */
  #cartinhasGrid {
    display: grid;
    grid-template-columns: repeat(auto-fit,minmax(220px,1fr));
    gap: 1.5rem;
    max-width: 960px;
    margin: 0 auto;
  }
  .cartinha {
    background: linear-gradient(135deg, #610000, #440044);
    border-radius: 16px;
    box-shadow: 0 4px 10px #7a0034;
    cursor: pointer;
    padding: 1.2rem;
    position: relative;
    overflow: hidden;
    transition: transform 0.25s ease;
    user-select: none;
  }
  .cartinha:hover {
    transform: scale(1.05);
  }
  .cartinha .frente, .cartinha .verso {
    position: relative;
    transition: transform 0.6s;
    backface-visibility: hidden;
    border-radius: 16px;
  }
  .cartinha .verso {
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    background: #db2b5f;
    color: #fff;
    transform: rotateY(180deg);
    padding: 1rem;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.1rem;
    font-weight: 500;
    line-height: 1.4;
    text-align: center;
  }
  .cartinha.flipped .frente {
    transform: rotateY(180deg);
  }
  .cartinha.flipped .verso {
    transform: rotateY(0deg);
  }
  /* Ícone fofo do Homem-Aranha */
  .spider-icon {
    position: absolute;
    top: 12px;
    right: 12px;
    width: 30px;
    height: 30px;
    background: url('https://upload.wikimedia.org/wikipedia/commons/thumb/0/0e/Spider-Man_Logo.svg/120px-Spider-Man_Logo.svg.png') no-repeat center/contain;
    opacity: 0.3;
    pointer-events: none;
    user-select: none;
  }
</style>
</head>
<body>

<div id="entrada">
  <div>
    <h1>Para você eu escreveria cartinhas infinitas<br>mas nenhuma teria palavras suficientes para descrever o quanto eu te amo</h1>
    <button id="btnEntrar">Ler minhas cartinhas pra você</button>
  </div>
</div>

<div id="cartinhasPage">
  <h2 id="tituloCartinhas">Minhas Cartinhas Apaixonadas</h2>
  <div id="cartinhasGrid">
    <!-- Cartinhas vão aqui pelo JS -->
  </div>
</div>

<script>
  const frases = [
    "Se você fosse uma estrela, eu apagaria o céu inteiro só pra olhar só pra você.",
    "Você é o lar que eu procurava até quando nem sabia o que era ter casa.",
    "Você é a única certeza bonita em um mundo tão incerto.",
    "O amor que tenho por você não cabe em palavras, mas mesmo assim, eu tento em cada uma delas.",
    "Ser tua é mais do que destino. É vontade, é coragem, é entrega.",
    "Se meu coração tivesse endereço, seria qualquer lugar onde você está.",
    "Te amar é como ter um céu inteiro dentro do peito — e ainda assim sentir que é pouco."
  ];

  const entrada = document.getElementById('entrada');
  const cartinhasPage = document.getElementById('cartinhasPage');
  const btnEntrar = document.getElementById('btnEntrar');
  const cartinhasGrid = document.getElementById('cartinhasGrid');

  btnEntrar.addEventListener('click', () => {
    entrada.style.display = 'none';
    cartinhasPage.style.display = 'block';
  });

  frases.forEach((frase, index) => {
    const cartinha = document.createElement('div');
    cartinha.className = 'cartinha';
    cartinha.setAttribute('tabindex', '0');
    cartinha.setAttribute('aria-label', `Cartinha ${index + 1}`);

    const frente = document.createElement('div');
    frente.className = 'frente';
    frente.textContent = `Cartinha ${index + 1}`;

    const verso = document.createElement('div');
    verso.className = 'verso';
    verso.textContent = frase;

    const spider = document.createElement('div');
    spider.className = 'spider-icon';

    cartinha.appendChild(frente);
    cartinha.appendChild(verso);
    cartinha.appendChild(spider);

    cartinha.addEventListener('click', () => {
      cartinha.classList.toggle('flipped');
    });
    cartinha.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        cartinha.classList.toggle('flipped');
      }
    });

    cartinhasGrid.appendChild(cartinha);
  });
</script>

</body>
</html>
"""

path_arquivo = "/mnt/data/index.html"
with open(path_arquivo, "w", encoding="utf-8") as f:
    f.write(codigo_site)

path_arquivo
